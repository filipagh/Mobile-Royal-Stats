<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:padding="10dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center">
            <TextView
                    android:text="Name/ ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" android:id="@+id/nameIDPlayerStats"
                    android:gravity="center"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical|center">

            <TextView
                    android:text="Player Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/palyerInfoPlayerStats"
                    android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                    android:layout_weight="1" android:gravity="center"/>
            <TextView
                    android:text="Win Ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                    android:id="@+id/winRatioPlayerStats" android:layout_weight="1" android:gravity="center"/>
        </TableRow>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
        />
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:text="Trophy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trophyPlayerStats"
                    android:layout_alignParentStart="true" android:layout_below="@+id/leaderPlayerStats"
                    android:layout_weight="1"/>
            <TextView
                    android:text="WarDayWins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/warDayWinsPlayerStats"
                    android:layout_alignParentStart="true" android:layout_below="@+id/trophyPlayerStats"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:text="Clan"
                    android:layout_width="wrap_content"
                    android:id="@+id/clanPlayerStats" android:layout_alignParentStart="true"
                    android:layout_below="@+id/palyerInfoPlayerStats" tools:layout_height="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView
                    android:text="CW Last 10 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cwLast10PlayerStats"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:text="Clans Last year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clansLastyearPlayerStats"
                    android:layout_alignParentStart="true" android:layout_below="@+id/cwLast20PlayerStats"
                    android:layout_weight="1"/>
            <TextView
                    android:text="CWlast20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cwLast20PlayerStats"
                    android:layout_alignParentEnd="true" android:layout_below="@+id/trophyPlayerStats"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:text="Leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/leaderPlayerStats" android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" android:layout_weight="1"/>
            <TextView
                    android:text="CWLifeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cwLifeTimePlayerStats"
                    android:layout_alignParentEnd="true" android:layout_below="@+id/cwLast20PlayerStats"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center">

            <TextView
                    android:text="Missed Final Battle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" android:id="@+id/missedFinalBattlePlayerStats"
            />
        </TableRow>
    </TableLayout>
</RelativeLayout>
